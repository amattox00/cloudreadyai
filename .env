# ===== CloudReadyAI Base Environment =====
ENV=production

# ---- Backend Settings ----
API_PORT=8080
BACKEND_HOST=0.0.0.0

# ---- Database ----
# Update these with your actual DB values
POSTGRES_PORT=5432
POSTGRES_USER=cloudready
POSTGRES_PASSWORD=cloudready
POSTGRES_DB=cloudready

# ---- Redis ----
REDIS_HOST=host.docker.internal
REDIS_PORT=6379

# ---- Security / JWT ----
JWT_SECRET=changemeinproduction
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=3600
# ==== Phase 5 Settings ====
ENABLE_PHASE5=1
AWS_PRICING_INDEX=https://pricing.us-east-1.amazonaws.com/offers/v1.0/aws/index.json
AZURE_PRICES_API=https://prices.azure.com/api/retail/prices
GCP_BILLING_API_BASE=https://cloudbilling.googleapis.com/v1
GCP_BILLING_API_KEY=REPLACE_ME_OPTIONAL
DEFAULT_REGIONS=aws:us-east-1,azure:eastus,gcp:us-central1
# Optional (limits pages in lite endpoint if you added it earlier)
PHASE5_CACHE_TTL=600
PHASE5_PRICES_MODE=mock
PHASE5_PRICES_TIMEOUT=8
PHASE5_PRICES_FALLBACK=static
PHASE5_PRICES_MAX_RESULTS=20
PHASE5_PRICES_FILTER_COMPUTE=true
PHASE5_PRICES_MAX_PAGES=1
# ===== Phase 8 (Modeling) =====
PHASE8_ENABLED=true
PHASE8_MODE=mock
PHASE8_DEFAULT_SCENARIO=baseline
DB_HOST=host.docker.internal
POSTGRES_HOST=host.docker.internal
POSTGRES_URL=postgresql://cloudready:cloudready@host.docker.internal:5432/cloudready
REDIS_URL=redis://host.docker.internal:6379
